<UserControl x:Class="schedule_fetcher.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:schedule_fetcher.Views"
             xmlns:viewModels="clr-namespace:schedule_fetcher.ViewModels"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:cm="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             d:DataContext="{Binding Source={d:DesignInstance viewModels:TimerViewModel}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Margin="5" Header="{Binding TimerHeader}">
        <ui:SimpleStackPanel IsEnabled="{Binding IsEnabled}" Orientation="Vertical" Spacing="20">
            <Border BorderBrush="LawnGreen" BorderThickness="3">
                <Button cm:Message.Attach="StartStop" Content="Start/Stop" HorizontalAlignment="Stretch"/>
            </Border>
            <Border BorderBrush="Yellow" BorderThickness="3">
                <Button cm:Message.Attach="PauseContinue" Content="Pause/Continue" HorizontalAlignment="Stretch"/>
            </Border>
            <Border BorderBrush="Red" BorderThickness="3">
                <Button cm:Message.Attach="Reset" Content="Reset" HorizontalAlignment="Stretch"/>
            </Border>
        </ui:SimpleStackPanel>
    </GroupBox>
</UserControl>
